<article>
	<%= entry["html"] %>
</article>
<h2>Attachments</h2>
<ul class="attachments">
<%= lc {name,embed} inlist entry["attachments"] do %>
	<li class="attachment">
		<%= name %>
	</li>
<% end %>
</ul>
<hr>
<p>
Last updated: <span><%= entry["updated_at"] %></span> | 
<span><%= entry["comments"] %> comments</span>
<span><a href="/<%= entry["user"]["login"] %>">All entries</a></span>
</p>
<ul class="comments">
</ul>